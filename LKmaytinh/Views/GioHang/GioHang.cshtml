@using LKmaytinh.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}



<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table style="width:90%;margin-left:86px" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td style="width:107px;text-align:center">  Mã Sản Phẩm </td>
        <td style="text-align:center"> Tên Sản phẩm </td>
        <td style="text-align:center"> Ảnh bìa </td>
        <td style="width:20px"> Số lượng </td>
        <td style="text-align:center;width:180px"> Đơn giá </td>
        <td style="text-align:center;width:180px"> Thành tiền </td>
        <td width="100px"></td>
        <td width="100px"></td>
        <td width="100px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td style="text-align:center">@item.iMaSP</td>
            <td style="text-align:center">@item.sTenSP</td>
            <td style="width:275px"><img src="~/Hinhanh/@item.sAnhbia" style="height:150px;width:100%" /></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMaSP }))
            {
                <td style="text-align:center">
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellowgreen" />

                </td>
                <td style="text-align:center">@String.Format("{0:0,0 VNĐ}", item.dDongia)</td>
                <td style="text-align:center">@String.Format("{0:0,0 VNĐ}", item.dThanhtien)</td>
                <td style="text-align:center">
                    <a href="@Url.Action("Details","MayTinh", new { id=item.iMaSP})">Chi tiết </a>
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMaSP })
                </td>
                <td style="text-align:center">
                    <input type="submit" value="Cập Nhật"  style="max-width: 80px"/>
                </td>
            }
        </tr>
    }
    <tr style="font-weight: bold; color:red">
        <td colspan="5" style="text-align:left"> Số lượng sản phẩm:   @ViewBag.Tongsoluong </td>
        <td colspan="4" style="text-align:right"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9" style="text-align:right">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight:bold;color:red">
        <td colspan="9" style="text-align:right" >
            @Html.ActionLink("Đặt Hàng","DatHang","GioHang")
        </td>
    </tr>
</table>
