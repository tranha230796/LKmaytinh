@model LKmaytinh.Models.SanPham
@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Sản Phẩm Cần Xóa</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Sản Phẩm:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt>
            Giá bán:
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.Gia) VNĐ
        </dd>
        <dt>
            Mô tả:
        </dt>
        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt>
            Ảnh bìa:
        </dt>
        <dd>
            <img src="@Url.Content("~/Hinhanh/"+  Model.Anhbia)" width="120px" />
        </dd>
        <dt>
            Ngày cập nhất:
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat) VNĐ
        </dd>
        <dt>
            Loại sản phẩm: 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Loai.Tenloai)
        </dd>
        <dt>
            Nhà Sản Xuất:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NhaSX.TenNSX)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về", "SanPham")
        </div>
    }
</div>

