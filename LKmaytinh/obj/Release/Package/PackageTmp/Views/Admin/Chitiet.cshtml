@model LKmaytinh.Models.SanPham
@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h3>Thông Tin Chi Tiết Sản Phẩm</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Sản Phẩm:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt>
            Giá bán:
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.Gia) VNĐ
        </dd>
        <dt>
            Mô tả:
        </dt>
        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt>
            Ảnh bìa:
        </dt>
        <dd>
            <img src="@Url.Content("~/Hinhanh/"+  Model.Anhbia)" width="120px" />
        </dd>
        <dt>
            Ngày cập nhất:
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat) VNĐ
        </dd>
        <dt>
            Loại Sản Phẩm:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Loai.Tenloai)
        </dd>
        <dt>
            Hãng Sản Xuất:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NhaSX.TenNSX)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Điều Chỉnh", "Sua", new { id = Model.MaSP }) |
    @Html.ActionLink("Quay Lại", "SanPham")
</p>

